<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AURA GYM | Member Dashboard</title>
    
    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Styles -->
    <link rel="stylesheet" href="/css/member.css">
    
    <!-- Script -->
    <script src="/js/member.js" defer></script>
</head>
<body>

    <div id="member-app">
        
        <% if (success && success.length) { %>
            <div class="flash-success">
                <%= success[0] %>
            </div>
        <% } %>
        <% if (error && error.length) { %>
            <div class="flash-error">
                <%= error[0] %>
            </div>
        <% } %>
        
        <!-- Sidebar Navigation -->
        <aside id="sidebar">
            <div class="sidebar-header">
                <a href="index.html" class="logo">
                    <i class="fa-solid fa-bolt"></i> AURA<span>GYM</span>
                </a>
            </div>

            <nav class="sidebar-menu">
                
                <ul>
                    <li>
                        <a href="#dashboard-overview" class="nav-link active" data-target="dashboard-overview">
                            <i class="fa-solid fa-grid-2"></i>
                            <span>Overview</span>
                        </a>
                    </li>
                    <li>
                        <a href="#workouts" class="nav-link" data-target="workouts">
                            <i class="fa-solid fa-dumbbell"></i>
                            <span>Workouts</span>
                        </a>
                    </li>
                    <li>
                        <a href="#nutrition" class="nav-link" data-target="nutrition">
                            <i class="fa-solid fa-utensils"></i>
                            <span>Nutrition</span>
                        </a>
                    </li>
                    <li>
                        <a href="#schedule" class="nav-link" data-target="schedule">
                            <i class="fa-solid fa-calendar-day"></i>
                            <span>Schedule</span>
                        </a>
                    </li>
                    <li>
                        <a href="#progress" class="nav-link" data-target="progress">
                            <i class="fa-solid fa-chart-line"></i>
                            <span>Progress</span>
                        </a>
                    </li>
                    <li>
                        <a href="#profile" class="nav-link" data-target="profile">
                            <i class="fa-solid fa-user"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="#settings" class="nav-link" data-target="settings">
                            <i class="fa-solid fa-gear"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <form action="/" method="GET">
                <div class="sidebar-footer">
                    <button id="logout-btn">
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <span>Log Out</span>
                    </button>
                </div>
            </form>
        </aside>

        <!-- Main Content Wrapper -->
        <div id="main-wrapper">
            
            <!-- Top Navbar -->
            <header id="top-navbar">
                <button id="sidebar-toggle"><i class="fa-solid fa-bars"></i></button>
                
                <div class="page-title">
                    <h2 id="current-page-title">Overview</h2>
                </div>

                <div class="user-menu">
                    <div class="user-info">
                        <span class="user-name"><%= currentUser.username %></span>
                        <span class="user-role">Member</span>
                    </div>
                    <div class="user-avatar">
                        <img id="header-avatar" src="https://ui-avatars.com/api/?name=User&background=39ff14&color=000" alt="Profile">
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main id="content-area">

                <!-- 1. Dashboard Overview -->
                <section id="dashboard-overview" class="view-section active scroll-reveal">
                    <div class="welcome-banner">
                        <div class="welcome-text">
                            <h1 id="welcome-msg">Welcome back <%= currentUser.username %>!</h1>
                            <p>Here's what's happening with your fitness today.</p>
                        </div>
                        <div class="date-badge" id="current-date">--</div>
                    </div>

                    <!-- Stats Grid -->
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="icon-box green">
                                <i class="fa-solid fa-fire"></i>
                            </div>
                            <div class="stat-info">
                                <h3>Calories Burned</h3>
                                <p class="stat-value" id="stat-cals-burned">0</p>
                                <span class="stat-label">kcal today</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="icon-box blue">
                                <i class="fa-solid fa-drumstick-bite"></i>
                            </div>
                            <div class="stat-info">
                                <h3>Calories Consumed</h3>
                                <p class="stat-value" id="stat-cals-consumed">0</p>
                                <span class="stat-label">kcal today</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="icon-box purple">
                                <i class="fa-solid fa-dumbbell"></i>
                            </div>
                            <div class="stat-info">
                                <h3>Workouts</h3>
                                <p class="stat-value" id="stat-workouts">0</p>
                                <span class="stat-label">Completed this week</span>
                            </div>
                        </div>
                        <div class="stat-card">
                            <div class="icon-box orange">
                                <i class="fa-solid fa-trophy"></i>
                            </div>
                            <div class="stat-info">
                                <h3>Current Plan</h3>
                                <p class="stat-value">Hypertrophy</p>
                                <span class="stat-label">Week 4 of 12</span>
                            </div>
                        </div>
                    </div>

                    <div class="dashboard-split">
                        <div class="chart-container">
                            <h3>Weekly Activity</h3>
                            <canvas id="weeklyActivityChart"></canvas>
                        </div>
                        <div class="recent-activity">
                            <h3>Recent Logs</h3>
                            <ul id="recent-logs-list" class="activity-list">
                                <!-- Populated by JS -->
                            </ul>
                        </div>
                    </div>
                </section>

                <!-- 2. Workouts Section -->
                <section id="workouts" class="view-section">
                    
                    <!-- Header -->
                    <div class="section-header scroll-reveal">
                        <div>
                            <h2>Start a Workout</h2>
                            <p class="section-subtitle">Choose a program or log your own session.</p>
                        </div>
                        <button class="btn btn-primary" id="open-workout-modal">
                            <i class="fa-solid fa-plus"></i> Manual Log
                        </button>
                    </div>

                    <!-- Featured Workouts Grid -->
                    <div class="workout-cards-grid">
                        
                        <!-- Card 1 -->
                        <div class="workout-card scroll-reveal">
                            <div class="card-bg" style="background-image: url('/images/beginner.png');"></div>
                            <div class="card-overlay"></div>
                            <div class="card-content">
                                <span class="card-badge beginner">Beginner</span>
                                <h3>Foundation Start</h3>
                                <p>Low impact full-body activation.</p>
                                <div class="card-meta">
                                    <span><i class="fa-regular fa-clock"></i> 30m</span>
                                    <span><i class="fa-solid fa-fire"></i> 150 kcal</span>
                                </div>
                                <button class="btn btn-glass btn-sm">Start Now</button>
                            </div>
                        </div>

                        <!-- Card 2 -->
                        <div class="workout-card scroll-reveal delay-100">
                            <div class="card-bg" style="background-image: url('/images/intermediate-men.png');"></div>
                            <div class="card-overlay"></div>
                            <div class="card-content">
                                <span class="card-badge intermediate">Intermediate</span>
                                <h3>Upper Body Power</h3>
                                <p>Build strength in chest and arms.</p>
                                <div class="card-meta">
                                    <span><i class="fa-regular fa-clock"></i> 45m</span>
                                    <span><i class="fa-solid fa-fire"></i> 320 kcal</span>
                                </div>
                                <button class="btn btn-glass btn-sm">Start Now</button>
                            </div>
                        </div>

                        <!-- Card 3 -->
                        <div class="workout-card scroll-reveal delay-200">
                            <div class="card-bg" style="background-image: url('/images/advanced.png');"></div>
                            <div class="card-overlay"></div>
                            <div class="card-content">
                                <span class="card-badge advanced">Advanced</span>
                                <h3>HIIT Shred</h3>
                                <p>High intensity cardio interval training.</p>
                                <div class="card-meta">
                                    <span><i class="fa-regular fa-clock"></i> 25m</span>
                                    <span><i class="fa-solid fa-fire"></i> 400 kcal</span>
                                </div>
                                <button class="btn btn-glass btn-sm">Start Now</button>
                            </div>
                        </div>

                    </div>

                    <!-- Recent Logs Table -->
                    <div class="history-wrapper scroll-reveal delay-300">
                        <h3>Recent History</h3>
                        <div class="table-container">
                            <table class="data-table" id="workouts-table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Duration</th>
                                        <th>Calories</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Rows via JS -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>

                <!-- 3. Nutrition Section -->
                <section id="nutrition" class="view-section scroll-reveal">
                    <div class="section-header">
                        <div>
                            <h2>Nutrition & Macros</h2>
                            <p class="section-subtitle">Fuel your body for performance.</p>
                        </div>
                        <button class="btn btn-primary" id="open-meal-modal">
                            <i class="fa-solid fa-plus"></i> Log Meal
                        </button>
                    </div>

                    <!-- Macro Overview -->
                    <div class="macro-overview">
                        <div class="macro-main-card">
                            <div class="ring-container">
                                <svg class="progress-ring" width="120" height="120">
                                    <circle class="progress-ring__circle-bg" stroke="#1c212e" stroke-width="8" fill="transparent" r="52" cx="60" cy="60"/>
                                    <circle class="progress-ring__circle" id="cal-ring" stroke="#39ff14" stroke-width="8" fill="transparent" r="52" cx="60" cy="60"/>
                                </svg>
                                <div class="ring-text">
                                    <span id="nutri-total-cals">0</span>
                                    <small>kcal</small>
                                </div>
                            </div>
                            <div class="macro-info">
                                <h4>Daily Intake</h4>
                                <p>Target: 2500 kcal</p>
                            </div>
                        </div>

                        <!-- Mini Macro Bars -->
                        <div class="macro-bars-container">
                            <div class="macro-bar-item">
                                <div class="mb-header"><span>Protein</span> <span>120g / 180g</span></div>
                                <div class="mb-track"><div class="mb-fill protein" style="width: 65%"></div></div>
                            </div>
                            <div class="macro-bar-item">
                                <div class="mb-header"><span>Carbs</span> <span>200g / 250g</span></div>
                                <div class="mb-track"><div class="mb-fill carbs" style="width: 80%"></div></div>
                            </div>
                            <div class="macro-bar-item">
                                <div class="mb-header"><span>Fats</span> <span>45g / 70g</span></div>
                                <div class="mb-track"><div class="mb-fill fats" style="width: 50%"></div></div>
                            </div>
                        </div>

                        <!-- Nutrition Insight -->
                        <div class="insight-card nutrition-insight">
                            <div class="insight-icon"><i class="fa-solid fa-carrot"></i></div>
                            <div class="insight-content">
                                <h4>Smart Tip</h4>
                                <p>You're a bit low on protein today. Consider a shake post-workout!</p>
                            </div>
                        </div>
                    </div>

                    <h3 class="subsection-title">Today's Logs</h3>
                    <div id="meals-list" class="cards-list">
                        <!-- Meal Cards via JS -->
                    </div>
                </section>

                <!-- 4. Schedule Section -->
                <section id="schedule" class="view-section scroll-reveal">
                    <div class="section-header">
                        <h2>Training Schedule</h2>
                    </div>
                    <div class="schedule-grid">
                        <div class="day-card">
                            <h4>Monday</h4>
                            <div class="scheduled-item type-strength">Chest & Triceps</div>
                        </div>
                        <div class="day-card">
                            <h4>Tuesday</h4>
                            <div class="scheduled-item type-cardio">HIIT Cardio</div>
                        </div>
                        <div class="day-card">
                            <h4>Wednesday</h4>
                            <div class="scheduled-item type-rest">Rest Day</div>
                        </div>
                        <div class="day-card active-day">
                            <h4>Thursday</h4>
                            <div class="scheduled-item type-strength">Back & Biceps</div>
                            <span class="badge">Today</span>
                        </div>
                        <div class="day-card">
                            <h4>Friday</h4>
                            <div class="scheduled-item type-strength">Leg Day</div>
                        </div>
                        <div class="day-card">
                            <h4>Saturday</h4>
                            <div class="scheduled-item type-flex">Yoga & Recovery</div>
                        </div>
                        <div class="day-card">
                            <h4>Sunday</h4>
                            <div class="scheduled-item type-rest">Rest Day</div>
                        </div>
                    </div>
                </section>

                <!-- 5. Progress Section -->
                <section id="progress" class="view-section scroll-reveal">
                    <div class="section-header">
                        <div>
                            <h2>Performance Analytics</h2>
                            <p class="section-subtitle">Tracking your evolution over time.</p>
                        </div>
                    </div>

                    <div class="progress-dashboard">
                        <!-- Visual Context Background -->
                        <div class="progress-bg-visual"><i class="fa-solid fa-chart-line"></i></div>

                        <div class="chart-area glass-panel">
                            <div class="chart-header-row">
                                <h3>Weight History</h3>
                                <div class="chart-legend">
                                    <span class="dot-legend"></span> Body Weight (lbs)
                                </div>
                            </div>
                            <div class="chart-wrapper">
                                <canvas id="weightHistoryChart"></canvas>
                            </div>
                        </div>

                        <!-- AI Insight -->
                        <div class="insight-card ai-insight glass-panel">
                            <div class="insight-icon pulse"><i class="fa-solid fa-robot"></i></div>
                            <div class="insight-content">
                                <h4>AI Analysis</h4>
                                <p>Your consistency is up <strong>15%</strong> this month. Projected to hit 170 lbs goal by Nov 15th.</p>
                            </div>
                        </div>

                        <!-- Enhanced Stat Cards -->
                        <div class="records-grid-enhanced">
                            <div class="stat-card-enhanced">
                                <div class="sce-icon"><i class="fa-solid fa-dumbbell"></i></div>
                                <div class="sce-data">
                                    <span>Max Bench</span>
                                    <strong class="counter" data-target="225">0</strong> <small>lbs</small>
                                </div>
                                <div class="sce-trend positive"><i class="fa-solid fa-arrow-trend-up"></i> 5%</div>
                            </div>
                            <div class="stat-card-enhanced">
                                <div class="sce-icon"><i class="fa-solid fa-person-running"></i></div>
                                <div class="sce-data">
                                    <span>Max Squat</span>
                                    <strong class="counter" data-target="315">0</strong> <small>lbs</small>
                                </div>
                                <div class="sce-trend positive"><i class="fa-solid fa-arrow-trend-up"></i> 2%</div>
                            </div>
                            <div class="stat-card-enhanced">
                                <div class="sce-icon"><i class="fa-solid fa-weight-hanging"></i></div>
                                <div class="sce-data">
                                    <span>Deadlift</span>
                                    <strong class="counter" data-target="405">0</strong> <small>lbs</small>
                                </div>
                                <div class="sce-trend neutral"><i class="fa-solid fa-minus"></i> 0%</div>
                            </div>
                            <div class="stat-card-enhanced">
                                <div class="sce-icon"><i class="fa-solid fa-stopwatch"></i></div>
                                <div class="sce-data">
                                    <span>Fastest 5k</span>
                                    <strong>22:30</strong>
                                </div>
                                <div class="sce-trend positive"><i class="fa-solid fa-arrow-trend-down"></i> 10s</div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- 6. Profile Section (REDESIGNED) -->
                <section id="profile" class="view-section scroll-reveal">
                    <div class="profile-dashboard">
                        <!-- Visual Context -->
                        <div class="progress-bg-visual" style="right: auto; left: -50px; opacity: 0.05;">
                            <i class="fa-solid fa-user-circle"></i>
                        </div>

                        <div class="profile-card glass-panel profile-container-enhanced">
                            <div class="profile-header-visual">
                                <div class="avatar-wrapper">
                                    <img id="profile-page-avatar" src="https://ui-avatars.com/api/?name=User" alt="Avatar">
                                    <button class="edit-avatar-btn"><i class="fa-solid fa-camera"></i></button>
                                </div>
                                <div class="profile-titles">
                                    <h2 id="profile-name"><%= currentUser.username %></h2>
                                    <p id="profile-email"><%= currentUser.email %></p>
                                    <span class="member-badge">Pro Member</span>
                                </div>
                            </div>

                            <form id="profile-form" class="profile-form-grid">
                                <div class="form-group">
                                    <label><i class="fa-solid fa-user"></i> Full Name</label>
                                    <input type="text" id="edit-name" class="form-input" name="username" value="<%= currentUser.username %>">
                                </div>
                                <div class="form-group">
                                    <label><i class="fa-solid fa-envelope"></i> Email Address</label>
                                    <input type="email" id="edit-email" class="form-input" name="email" value="<%= currentUser.email %>">
                                </div>
                                <div class="form-group">
                                    <label><i class="fa-solid fa-bullseye"></i> Fitness Goal</label>
                                    <div class="select-wrapper">
                                        <select id="edit-goal" class="form-input">
                                            <option value="weight-loss">Weight Loss</option>
                                            <option value="muscle-gain">Muscle Gain</option>
                                            <option value="endurance">Endurance</option>
                                            <option value="flexibility">Flexibility</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-primary btn-save">
                                        <span>Save Changes</span>
                                        <i class="fa-solid fa-check"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <!-- 7. Settings Section (ENHANCED) -->
                <section id="settings" class="view-section scroll-reveal">
                    <div class="settings-container glass-panel">
                        <h2>App Settings</h2>
                        
                        <!-- Dark Mode Toggle -->
                        <div class="setting-item">
                            <div class="setting-info">
                                <h4>Dark Mode</h4>
                                <p>Switch between light and dark themes.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox" id="theme-toggle">
                                <span class="slider round"></span>
                            </label>
                        </div>

                        <div class="setting-item">
                            <div class="setting-info">
                                <h4>Email Notifications</h4>
                                <p>Receive weekly progress reports.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider round"></span>
                            </label>
                        </div>
                        <div class="setting-item">
                            <div class="setting-info">
                                <h4>Public Profile</h4>
                                <p>Allow others to find you in community challenges.</p>
                            </div>
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider round"></span>
                            </label>
                        </div>
                    </div>
                </section>

            </main>
        </div>
    </div>

    <!-- Server data bootstrap for JS -->
    <script>
        window.MEMBER_BOOTSTRAP = {
            workouts: <%- JSON.stringify(currentUser && currentUser.workouts ? currentUser.workouts : []) %>,
            meals: <%- JSON.stringify(currentUser && currentUser.meals ? currentUser.meals : []) %>
        };
    </script>

    <!-- Modals -->

    <!-- Add Workout Modal -->
    <div id="modal-workout" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Log Workout</h3>
                <span class="close-modal" data-modal="modal-workout">&times;</span>
            </div>
            <form id="form-workout">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" id="w-title" placeholder="e.g. Morning Cardio" required>
                </div>
                <div class="form-group">
                    <label>Type</label>
                    <select id="w-type">
                        <option value="Strength">Strength</option>
                        <option value="Cardio">Cardio</option>
                        <option value="Flexibility">Flexibility</option>
                        <option value="HIIT">HIIT</option>
                    </select>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label>Duration (min)</label>
                        <input type="number" id="w-duration" required>
                    </div>
                    <div class="form-group">
                        <label>Calories</label>
                        <input type="number" id="w-calories" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Save Workout</button>
            </form>
        </div>
    </div>

    <!-- Add Meal Modal -->
    <div id="modal-meal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Log Meal</h3>
                <span class="close-modal" data-modal="modal-meal">&times;</span>
            </div>
            <form id="form-meal">
                <div class="form-group">
                    <label>Meal Name</label>
                    <input type="text" id="m-name" placeholder="e.g. Chicken Salad" required>
                </div>
                <div class="form-group">
                    <label>Calories</label>
                    <input type="number" id="m-calories" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add Meal</button>
            </form>
        </div>
    </div>

</body>
</html>